/*
Test experience. Use a hosted DeepSeek to chat having given it the current unit context
*/
{
  "orchestrator_class": "ThreadedLLMResponse",
  "processor_config": {
    "OpenEdXProcessor": {
      "function": "get_location_content"
    },
    "LLMProcessor": {
      "function": "chat_with_context",
      "provider": "deepseek"
    },
    "SubmissionProcessor": {
      "function": "get_chat_history",
      "max_context_messages": 5
    }
  },
  "actuator_config": {
    "UIComponents": {
      "request": {
        "component": "AIRequestComponent",
        "config": {
          "buttonText": "Open Chat",
          "customMessage": "Chat with DeepSeek AI teaching assistant",
          "action": null
        }
      },
      "response": {
        "component": "AISidebarResponse",
        "config": {
          "customMessage": "AI powered assistant"
        }
      }
    }
  },
  "schema_version": "1.0",
}
