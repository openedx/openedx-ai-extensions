/*
Test experience. Ask ChatGPT to answer in a way that forces to use functions
to retrieve context from the current unit and the course outline
*/
{
  "orchestrator_class": "DirectLLMResponse",
  "processor_config": {
    "OpenEdXProcessor": {
    },
    "LLMProcessor": {
      "function": "answer_question",
      "provider": "openai",
      "enabled_tools": [
        "get_context",
        "get_location_content",
        "roll_dice",
        "get_location_link"
      ]
    }
  },
  "actuator_config": {
    "UIComponents": {
      "request": {
        "component": "AIRequestComponent",
        "config": {
          "buttonText": "Ask ChatGPT",
          "customMessage": "Answer a question using the functions capability"
        }
      },
      "response": {
        "component": "AIResponseComponent",
        "config": {
          "customMessage": "ChatGPT Response"
        }
      }
    }
  },
  "schema_version": "1.0",
}
