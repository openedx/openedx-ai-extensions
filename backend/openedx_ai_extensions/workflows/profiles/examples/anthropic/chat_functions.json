/*
Test experience using chat. Ask claude to answer in a way that forces to use functions
to retrieve context from the current unit and the course outline
*/
{
  "orchestrator_class": "ThreadedLLMResponse",
  "processor_config": {
    "OpenEdXProcessor": {
    },
    "LLMProcessor": {
      "function": "chat_with_context",
      "config": "anthropic",
      "enabled_tools": [
        "get_context",
        "get_location_content",
        "roll_dice",
        "get_location_link"
      ]
      // Streaming and functions is not supported
    },
    "SubmissionProcessor": {
      "function": "get_chat_history",
      "max_context_messages": 5
    }
  },
  "actuator_config": {
    "UIComponents": {
      "request": {
        "component": "AIRequestComponent",
        "config": {
          "buttonText": "Open Assistant Chat",
          "customMessage": "Chat with Claude teaching assistant using functions",
          "action": null
        }
      },
      "response": {
        "component": "AISidebarResponse",
        "config": {
          "customMessage": "AI powered assistant with functions capability"
        }
      }
    }
  },
  "schema_version": "1.0",
}
