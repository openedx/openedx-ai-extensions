/*
Basic summary experience. Send the course content to the LLM process and
present the streaming answer in the same box.
*/
{
  "orchestrator_class": "DirectLLMResponse",
  "processor_config": {
    "OpenEdXProcessor": {
      "function": "get_location_content"
    },
    "LLMProcessor": {
      "function": "summarize_content",
      "config": "default",
      "stream": true
    }
  },
  "actuator_config": {
    "UIComponents": {
      "request": {
        "component": "AIRequestComponent",
        "config": {
          "buttonText": "AI summary",
          "customMessage": "Produce a brief summary of this unit"
        }
      },
      "response": {
        "component": "AIResponseComponent",
        "config": {
          "customMessage": "AI summary assistant"
        }
      }
    }
  },
  "schema_version": "1.0",
}
